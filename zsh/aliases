alias gg89="gcc -Wall -pedantic -Werror -Wextra -std=gnu89"
alias gg="gcc -Wall -pedantic -Werror -Wextra -fsanitize=address -std=gnu89 -g"
alias compile="gcc -Wall -pedantic -Werror -Wextra -fsanitize=address,undefined -g -std=gnu99 src/*.c -o"
alias ccc="gcc -Wall -pedantic -Werror -Wextra -g -std=gnu99 src/*.c -o"
alias ray="gcc -Wall -pedantic -Werror -Wextra -fsanitize=address,undefined -g -std=gnu99 -lraylib src/*.c -o"
alias gg99="gcc -g -Wall -pedantic -Werror -Wextra -std=gnu99"
