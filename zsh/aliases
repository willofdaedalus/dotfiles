alias gs="git status"
alias gb="git branch"
alias gbc="git checkout -b" 
alias add="git add ."
alias logg="git log --graph --decorate --pretty=format:\"%Cgreen%h%Creset %C(cyan)(%an)%Creset - %C(yellow)%s%Creset %C(red)about %ar%Creset %C(bold green)%d%Creset\""
alias pb="git remote | xargs -L1 -I R git push R"
alias pba="git remote | xargs -L1 git push --all"
